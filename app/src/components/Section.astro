---
interface Props {
	id?: string
	classOutside?: string
	classInside?: string
}

const { id, classOutside, classInside } = Astro.props
---
<section class:list={[classOutside]}  class="relative">
	<div class="absolute -top-10" id={id} ></div>
	<div class:list={[classInside, 'container max-w-4xl px-4 py-12 mx-auto']}>
		<slot />
	</div>
</section>
